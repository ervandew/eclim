<?xml version="1.0" encoding="UTF-8"?>

<feature id="org.eclim"
    label="%featureName"
    version="${eclim.version}"
    provider-name="%providerName">

  <description>
    %description
  </description>

  <license url="%licenseURL">
    %license
  </license>

  <requires>
    <import plugin="org.eclim"/>
  </requires>

  <plugin
      id="org.eclim"
      version="${eclim.version}"
      unpack="true"/>

  <plugin
      id="org.eclim.core"
      version="${eclim.version}"
      unpack="false"/>

  <plugin
      id="org.eclim.vimplugin"
      version="${eclim.version}"
      unpack="true"/>

#foreach($feature in $installer.context.getKeysByPrefix("featureList", true))
  #if($installer.context.getValue("${feature}"))
    #set($name = $feature.replace("featureList.", ""))
    #if($name != 'python')

  <plugin
      id="org.eclim.$name"
      version="${eclim.version}"
      unpack="false"/>
    #end
  #end
#end

</feature>
