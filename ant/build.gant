def getEclipseHomeProp(){
  if (!gitAvailable){
    return 'eclipse.home'
  }

  // try branch specific eclipse home vars
  try {
    branch = execute('git', 'rev-parse --abbrev-ref HEAD')
    eclipseHomeProp = 'eclipse.home.' + branch
    binding.getVariable(eclipseHomeProp)
