// converts a version string ("3.2.10") to an integer so that it can be
// compared to other version strings numerically instead of alphabetically so
// that "3.2.10" would be greater than "3.2.9"
versionToInt = { version ->
  result = 0
  version.tokenize('.').reverse().eachWithIndex { part, index ->
    result += index > 0 ? (part.toInteger() * (10 ** index)) : part.toInteger()
  }
  return result
}

eclim = { args, port=null, failonerror=true, dir=null ->
  if (port == null){
    eclimrc = "${basedir}/org.eclim.core/test/eclimrc.test"
    new File(eclimrc).eachLine { line ->
      if (line.startsWith('nailgun.server.port')){
        port = line.split('=')[1]
