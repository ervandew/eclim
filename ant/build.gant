  try {
    if (Os.isFamily(Os.FAMILY_WINDOWS)){
      if (dir == null){
        eclimCmd = binding.getVariable('eclipse') + '/eclim.bat'
      }else{
        eclimCmd = dir + '/eclim.bat'
