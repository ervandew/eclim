<plugin id="org.eclim" name="Eclim" version="${eclim.version}">
  <extension id="application"
      point="org.eclipse.core.runtime.applications">
    <application>
      <run class="org.eclim.eclipse.EclimApplication"/>
    </application>
  </extension>

  <extension point="org.eclipse.ui.startup">
    <startup class="org.eclim.eclipse.EclimStartup"/>
  </extension>

  <extension point="org.eclipse.ui.views">
    <category id="org.eclim.category" name="Eclim"/>
    <view id="org.eclim.eclipse.ui.EclimdView"
        class="org.eclim.eclipse.ui.EclimdView"
        icon="resources/images/vim.gif"
        category="org.eclim.category"
        name="eclimd"
        restorable="true"
        allowMultiple="false">
      <description>
        Starts the eclim daemon and displays its logging output.
      </description>
    </view>
  </extension>
</plugin>
