<project name="vimplugin" default="vimplugin" basedir="../..">

  <!--
    - Builds vimplugin.
    -->
  <target name="vimplugin" description="build vimplugin">
    <copy todir="${build.plugins}/org.eclim.vimplugin_${eclim.version}">
      <fileset dir="src/eclipse/plugins/org.eclim.vimplugin" includes="**/*"/>
    </copy>

    <replace dir="${build.plugins}/org.eclim.vimplugin_${eclim.version}"
        includes="bin/**/*, about.html, plugin.properties, META-INF/MANIFEST.MF">
      <replacefilter token="$${eclim.version}" value="${eclim.version}"/>
    </replace>

    <jar jarfile="${build.plugins}/org.eclim.vimplugin_${eclim.version}/eclim-vimplugin.jar">
      <fileset dir="${build.classes}">
        <include name="org/vimplugin/**/*.class"/>
      </fileset>
      <fileset dir="src/java">
        <include name="org/vimplugin/**/*"/>
        <exclude name="**/package.html"/>
        <exclude name="**/*.java"/>
      </fileset>
    </jar>

    <!--antcall target="plugin.lib.jars">
      <param name="plugin.name" value=".vimplugin"/>
    </antcall-->
  </target>

  <!--
    - Start eclipse for testing vimplugin.
    -->
  <target name="eclipse.vimplugin"
      description="start eclipse for testing vimplugin">
    <exec executable="${eclipse.home}/eclipse">
      <arg value="-debug"/>
      <arg value="-console-debug"/>
      <arg value="-clean"/>
      <arg line="-data ${user.home}/workspace.vimplugin"/>
    </exec>
  </target>

</project>
