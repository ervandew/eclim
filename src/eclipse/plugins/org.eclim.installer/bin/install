ECLIM_ECLIPSE_HOME="${eclipse.home}"
ECLIPSE="$ECLIM_ECLIPSE_HOME/eclipse"
if [ ! -e "$ECLIPSE" ]; then
  ECLIPSE=`which eclipse 2> /dev/null`
fi
if [ ! -e "$ECLIPSE" ]; then
  ECLIPSE=`which eclipse-3.5 2> /dev/null`
fi
# mac osx default location
if [ ! -e "$ECLIPSE" ]; then
  ECLIPSE="$ECLIM_ECLIPSE_HOME/Eclipse.app/Contents/MacOS/eclipse"
fi

if [ ! -e "$ECLIPSE" ]; then
  echo "No eclipse executable found." 1>&2
  exit 1
fi

if [ "$2" = "addSite" -o "$2" = "listFeatures" ]; then
  "$ECLIPSE" -nosplash -clean -refresh \
    -application org.eclipse.update.core.standaloneUpdate $@
else
  "$ECLIPSE" -nosplash -clean \
    -application org.eclim.installer.application $@
fi
